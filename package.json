{
  "name": "webgl-examples",
  "private": true,
  "scripts": {
    "test": "lerna run test --since --include-dependents",
    "ci:test": "npm run build && npm run test",
    "clear": "lerna run lerna:clear",
    "build": "lerna run lerna:build",
    "version:bump": "lerna version --yes --conventional-commits"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.0",
    "@babel/preset-env": "^7.4.1",
    "@babel/preset-typescript": "^7.3.2",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "chai": "^4.2.0",
    "commitlint": "^7.6.1",
    "husky": "^2.3.0",
    "lerna": "^3.14.1",
    "lint-staged": "^8.1.7",
    "mocha": "^6.1.4",
    "prettier": "^1.17.1",
    "rollup": "^1.12.3",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-copy": "^2.0.1",
    "rollup-plugin-node-resolve": "^5.0.0",
    "ts-node": "^8.1.1",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "webgl-util": "file:packages/webgl-util",
    "webgl-fundamentals": "file:packages/webgl-fundamentals"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "linters": {
      "*.ts": [
        "prettier --write",
        "git add",
        "tslint"
      ]
    }
  }
}
